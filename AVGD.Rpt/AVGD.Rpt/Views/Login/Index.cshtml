@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <title>报表统计</title>
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="~/Source/V1/images/favicon.png" />
    <link href="~/Source/V1/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Source/V1/css/theme.css" rel="stylesheet" />
    <link href="~/Source/V1/css/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <script src="~/Source/V1/scripts/jquery-1.11.3.min.js"></script>
    <script src="~/Source/V1/scripts/login.js"></script>
</head>
<body style="overflow-x: hidden;">
    <div class="navbar">
        <div class="navbar-inner">
            <div class="container-fluid">          
                <ul class="nav pull-right">
                </ul>
                <img class="first" src="~/Source/V1/images/edslogo.png" style="height: 41px;">
                <span class="second" style="color: #FFFFFF">统计</span>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="dialog span4">
                <div class="block">
                    <div class="block-heading">
                        登录</div>
                    <div class="block-body">
                        <form id="form">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">
                                用户名</label>
                            <div class="col-sm-10">
                                <input type="text" class="span12" name="account" placeholder="用户名" autocomplete="off" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">
                                密码</label>
                            <div class="col-sm-10">
                                <input type="password" class="span12" name="password" placeholder="密码" autocomplete="off" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">
                                验证码</label>
                            <div class="col-sm-10">
                                <input type="text" class="span12" name="validatecode" id="validatecode" placeholder="验证码"
                                    style="width: 74%;" autocomplete="off" />
                                <img src="/login/GetValidateCode" style="cursor: pointer; margin-top: -11px; width: 20%;"
                                    id="imagecode" alt="验证码" />
                                <img id="msgcode" style="margin-top: -7px;" />
                            </div>
                        </div>
                        @Html.AntiForgeryToken()
                        <button type="button" class="btn btn-primary pull-right" style="width: 24%;" onclick="javascript:dosubmit('form','/login/index')">
                            登录</button>
                        @*  <a href="/Customers/index" target="_self">客户关系</a>*@
                        <div class="clearfix">
                        </div>
                        </form>
                        <form id="phoneform" style="display: none;">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">
                                手机号码</label>
                            <div class="col-sm-10">
                                <input type="text" class="span08" name="phonenumber" placeholder="手机号码" style="width: 75%;"
                                    readonly="readonly" /><input type="button" id="sendphoneId" style="width: 23%; margin-left: 5px;
                                        margin-bottom: 10px;" class="span04 btn btn-primary" value="获取验证码" onclick="sendPhoneCode()" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">
                                手机验证码</label>
                            <div class="col-sm-10">
                                <input type="text" class="span12" name="phonecode" placeholder="手机验证码" autocomplete="off" />
                            </div>
                        </div>
                        <button type="button" class="btn btn-primary pull-right" style="width: 24%;" onclick="javascript:phonesubmit('/login/phonelogin')">
                            认证登录</button>
                        <button type="button" id="phonebcak" class="btn btn-primary pull-right" style="width: 24%;
                            margin-right: 5px;" onclick="javascript:window.location.href='/login/index'">
                            返回</button>               
                        <div class="clearfix">
                            
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer style="text-align: center;">
			<hr/>
        <p>
	<div style="font-family: 微软雅黑, arial, verdana, sans-serif; font-size: 12px; font-weight: bolder;">Copyright
		© www.edsmall.cn EDS会员商城 粤ICP备14009360号
        </div>
            </p>
		</footer>
